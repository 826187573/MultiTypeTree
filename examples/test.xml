<beast version='2.0'
	namespace='beast.evolution.tree:beast.evolution.tree.coalescent:beast.core.parameter:beast.app.draw.tree'>

	<treeColour spec='StructuredCoalescentTreeColour' id='treeColour'
			nColours='3' maxBranchColours='20'
			colourLabel='deme' flatTree='true'>
		<rateMatrix spec='RealParameter' dimension='9' minordimension='3'
				value='2.0 0.5 0.5 0.5 0.5 0.5 0.5 0.5 1.0'/>
		<leafColours spec='IntegerParameter' dimension='10'
				value='0 0 1 2 2 1 1 0 0 2' />
	</treeColour>

	<tree spec='FlatTreeColour' id='tree'>
		<treeColour idref='treeColour'/>
	</tree>

    <colorTable spec='ColorTable' id='traitColourTable'>
        <color spec='ColorPlugin' color="red"/>
        <color spec='ColorPlugin' color="green"/>
        <color spec='ColorPlugin' color="blue"/>
    </colorTable>

	<treeDrawing spec='RootedTreeDrawing' id='treeDrawing'
			orientation='right' showLeafLabels='false'
			lineThickness='1.25' rotateTree='ladderizeRight'
			colorTrait='deme'>
		<traitColorTable idref='traitColourTable' />
		<tree idref='tree'/>
	</treeDrawing>

	<run spec='TreeDrawingGrid' fileName='figure.tex'
			width='140' height='140' strideLength='1'
			rowSpacer='20' columnSpacer='15'
			oneScale='true' debug='false'>
		<treeDrawing idref='treeDrawing'/>
	</run>

</beast>